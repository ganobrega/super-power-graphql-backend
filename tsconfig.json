{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["*"],
      "@prisma/generated/*": ["../prisma/generated/*"],
      "@resolvers/*": ["./resolvers/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "prisma/generated/type-graphql/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "**/*.spec.ts"]
}
